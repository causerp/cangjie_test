let boundary = "boundary"
let boundaryArr1 = "--boundary".toArray()
let boundaryArr2 = "--boundary--".toArray()

@Test
class TestFileError {
    let server = ServerBuilder().addr("127.0.0.1").port(0).build()

    @TestCase
    func fileError(): Unit {
        startServer()
        let client = TcpSocket("127.0.0.1", server.port)
        client.connect()
        try {
            client.write(
                "POST /upload HTTP/1.1\r\nHost: localhost\r\nContent-Type: multipart/form-data; boundary=boundary\r\nContent-Length: 4213\r\n\r\n--boundary\r\ncontent-disposition: form-data; filename=\"test.txt\"\r\n\r\nsss\r\n--boundary\r\ncontent-disposition: form-data; filename=\"test1.txt\";\r\n\r\nssss\r\n--boundary--\r\n"
                    .toArray())

            let buf = Array<UInt8>(4096, repeat: 0)
            client.read(buf)
            @Expect(String.fromUtf8(buf).contains("400 Bad Request"))
            let info1 = FileInfo("test.txt")
            @Assert(info1.size, 3)
        } finally {
            if (exists("test.txt")) {
                remove("test.txt")
            }
            if (exists("test1.txt")) {
                remove("test1.txt")
                @Expect(false)
            }
        }

        client.close()
        server.close()
        asanGC()
    }

    func startServer(): Unit {
        server.distributor.register("/upload", FileHandler("./", handlerType: UpLoad, bufferSize: 4096))
        server.logger.level = LogLevel.TRACE
        spawn {
            server.serve()
        }
        sleep(Duration.second)
    }
}
