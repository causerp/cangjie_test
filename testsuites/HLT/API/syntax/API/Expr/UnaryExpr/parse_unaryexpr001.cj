// LEVEL: 0
// DEPENDENCE: unaryexpr001.cj
// EXEC: %compiler %import-cangjie-stdx %cmp_opt %f -o %output %cmp_utest_opt
// RUN-EXEC: %run_stdx %output %run_utest_opt %run_args

import stdx.syntax.*

@Test
func test_unaryexpr_001() {
    let res = parseFile("./unaryexpr001.cj")
    var diags = res.diags
    @Assert(diags.size, 0)

    let sourcefile: SourceFile = res.node.getOrThrow()
    @Assert(sourcefile.toString().contains("-!a"))
    @Assert(sourcefile.name, "unaryexpr001.cj")
    @Assert(sourcefile.path.contains("unaryexpr001.cj"))
    @Assert(sourcefile.pkgHeader.isNone())

    var maindecl = (sourcefile.topLevelDecls[0] as MainDecl).getOrThrow()
    var unaryexpr = (maindecl.body.nodes[0] as UnaryExpr).getOrThrow()
    //toString()
    @Assert(unaryexpr.toString(), "-!a")

    //operand
    @Assert(unaryexpr.operand.toString(),"!a")

    //opKind
    match (unaryexpr.opKind) {
        case UnaryOpKind.Sub => ()
        case _ => @Assert(false)
    }

    var pos = unaryexpr.getOperatorPos()
    @Assert([pos.beginLine, pos.beginColumn, pos.endLine, pos.endColumn], [10i32, 5i32, 10i32, 6i32])
}
