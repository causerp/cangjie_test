// LEVEL: 1
// DEPENDENCE: ForInExpr_02.cj
// (CJNATIVE and not OHOS) EXEC: %compiler %import-cangjie-stdx %cmp_opt %f -o %output %cmp_utest_opt
// (CJNATIVE and not OHOS) RUN-EXEC: %run_stdx %output %run_utest_opt %run_args

import stdx.syntax.*

@Test
func test_ForInExpr_02() {
    let res = parseFile("./ForInExpr_02.cj")
    var diags = res.diags
    @Assert(diags.size, 0)

    let sourcefile: SourceFile = res.node.getOrThrow()
    @Assert(sourcefile.toString().contains(##"main() {
    for ((k, v) in map) {
        count++
    }
}"##))

    var mainDecl: MainDecl = (sourcefile.topLevelDecls[0] as MainDecl).getOrThrow()
    var expr_1: ForInExpr = (mainDecl.body.nodes[0] as ForInExpr).getOrThrow()
    @Assert(expr_1.toString(), ##"for ((k, v) in map) {
        count++
    }"##)
    @Assert(expr_1.body.toString(), ##"{
        count++
    }"##)
    @Assert(expr_1.expr.toString(), ##"map"##)
    @Assert(expr_1.pattern is TuplePattern)
    @Assert(expr_1.patternGuard.isNone())
}
