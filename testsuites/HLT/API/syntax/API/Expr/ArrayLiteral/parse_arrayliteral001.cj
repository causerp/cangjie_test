// LEVEL: 0
// DEPENDENCE: arrayliteral001.cj
// EXEC: %compiler %import-cangjie-stdx %cmp_opt %f -o %output %cmp_utest_opt
// RUN-EXEC: %run_stdx %output %run_utest_opt %run_args

import stdx.syntax.*

@Test
func test_arrayliteral_001() {
    let res = parseFile("./arrayliteral001.cj")
    var diags = res.diags
    @Assert(diags.size, 0)

    let sourcefile: SourceFile = res.node.getOrThrow()
    @Assert(sourcefile.toString().contains("[10, 0, 0, 0]"))
    @Assert(sourcefile.name, "arrayliteral001.cj")
    @Assert(sourcefile.path.contains("arrayliteral001.cj"))
    @Assert(sourcefile.pkgHeader.isNone())

    var maindecl = (sourcefile.topLevelDecls[0] as MainDecl).getOrThrow()
    var arrayliteral = (maindecl.body.nodes[0] as ArrayLiteral).getOrThrow()
    //toString()
    @Assert(arrayliteral.toString(), "[10, 0, 0, 0]")

    //elements
    var array = arrayliteral.elements
    @Assert(array.size,4)
    var x = array.get(0).getOrThrow().toString()
    @Assert(x,"10")

    var posList = arrayliteral.getCommasPos()
    @Assert(posList.size == 3, true)
    @Assert([posList[0].beginLine, posList[0].beginColumn, posList[0].endLine, posList[0].endColumn], [10i32, 8i32, 10i32, 9i32])
    @Assert([posList[1].beginLine, posList[1].beginColumn, posList[1].endLine, posList[1].endColumn], [10i32, 11i32, 10i32, 12i32])
    @Assert([posList[2].beginLine, posList[2].beginColumn, posList[2].endLine, posList[2].endColumn], [10i32, 14i32, 10i32, 15i32])
    var pos = arrayliteral.getLSquarePos()
    @Assert([pos.beginLine, pos.beginColumn, pos.endLine, pos.endColumn], [10i32, 5i32, 10i32, 6i32])
    pos = arrayliteral.getRSquarePos()
    @Assert([pos.beginLine, pos.beginColumn, pos.endLine, pos.endColumn], [10i32, 17i32, 10i32, 18i32])
}
