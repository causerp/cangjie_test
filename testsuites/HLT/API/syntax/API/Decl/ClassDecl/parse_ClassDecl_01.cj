// LEVEL: 0
// DEPENDENCE: ClassDecl_01.cj
// (CJNATIVE and not OHOS) EXEC: %compiler %import-cangjie-stdx %cmp_opt %f -o %output %cmp_utest_opt
// (CJNATIVE and not OHOS) RUN-EXEC: %run_stdx %output %run_utest_opt %run_args

import stdx.syntax.*

@Test
func test_ClassDecl_01() {
    let res = parseFile("./ClassDecl_01.cj")
    var diags = res.diags
    @Assert(diags.size, 0)

    let sourcefile: SourceFile = res.node.getOrThrow()
    @Assert(sourcefile.toString().contains(##"@Deprecated["仓颉"]
public class S1<T> <: I1<T> where T <: ToString{
    public let s1: Int64 = 0
    prop p1: Int64 {
        get() { 0 }
    }
    public init() {}
    func foo(a: T): T {
        return a
    }
}"##))
    @Assert(sourcefile.nodePos.beginLine, 1)
    @Assert(sourcefile.nodePos.beginColumn, 1)
    @Assert(sourcefile.nodePos.endLine, 19)
    @Assert(sourcefile.nodePos.endColumn, 2)
    @Assert(sourcefile.nodePos.fileName, "ClassDecl_01.cj")
    @Assert(sourcefile.nodePos.filePath.contains("ClassDecl_01.cj"))

    var classDecl: ClassDecl = (sourcefile.topLevelDecls[0] as ClassDecl).getOrThrow()
    @Assert(classDecl.toString(), ##"@Deprecated["仓颉"]
public class S1<T> <: I1<T> where T <: ToString{
    public let s1: Int64 = 0
    prop p1: Int64 {
        get() { 0 }
    }
    public init() {}
    func foo(a: T): T {
        return a
    }
}"##)
    @Assert(classDecl.body.memberDecls.size, 4)
    @Assert(classDecl.body.memberDecls[0] is VarDecl)
    @Assert(classDecl.body.memberDecls[0].toString(), ##"public let s1: Int64 = 0"##)
    @Assert(classDecl.body.memberDecls[1] is PropDecl)
    @Assert(classDecl.body.memberDecls[1].toString(), ##"prop p1: Int64 {
        get() { 0 }
    }"##)
    @Assert(classDecl.body.memberDecls[2] is FuncDecl)
    @Assert(classDecl.body.memberDecls[2].toString(), ##"public init() {}"##)
    @Assert(classDecl.body.memberDecls[3] is FuncDecl)
    @Assert(classDecl.body.memberDecls[3].toString(), ##"func foo(a: T): T {
        return a
    }"##)

    @Assert(classDecl.name, "S1")
    @Assert(classDecl.genericConstraints.isSome())
    @Assert(classDecl.genericConstraints.getOrThrow().toString(), "where T <: ToString")
    @Assert(classDecl.genericParams.size, 1)
    @Assert(classDecl.genericParams[0].toString(), "T")
    @Assert(classDecl.superTyAnnotations.size, 1)
    @Assert(classDecl.superTyAnnotations[0].toString(), "I1<T>")
    @Assert(classDecl.annotations.size, 1)
    @Assert(classDecl.annotations[0].toString(), ##"@Deprecated["仓颉"]"##)

    @Assert(classDecl.nodePos.beginLine, 9)
    @Assert(classDecl.nodePos.beginColumn, 1)
    @Assert(classDecl.nodePos.endLine, 19)
    @Assert(classDecl.nodePos.endColumn, 2)
    @Assert(classDecl.nodePos.fileName, "ClassDecl_01.cj")
    @Assert(classDecl.nodePos.filePath.contains("ClassDecl_01.cj"))

    var pos = classDecl.getClassKeyWordPos()
    @Assert([pos.beginLine, pos.beginColumn, pos.endLine, pos.endColumn], [10i32, 8i32, 10i32, 13i32])
    @Assert(classDecl.getGenericParamsCommasPos().size, 0)
    pos = classDecl.getGenericParamsLAnglePos().getOrThrow()
    @Assert([pos.beginLine, pos.beginColumn, pos.endLine, pos.endColumn], [10i32, 16i32, 10i32, 17i32])
    pos = classDecl.getGenericParamsRAnglePos().getOrThrow()
    @Assert([pos.beginLine, pos.beginColumn, pos.endLine, pos.endColumn], [10i32, 18i32, 10i32, 19i32])
    pos = classDecl.getIdentifierPos()
    @Assert([pos.beginLine, pos.beginColumn, pos.endLine, pos.endColumn], [10i32, 14i32, 10i32, 16i32])
    @Assert(classDecl.getSuperTyAnnotationsBitAndsPos().size, 0)
    pos = classDecl.getUpperBoundPos().getOrThrow()
    @Assert([pos.beginLine, pos.beginColumn, pos.endLine, pos.endColumn], [10i32, 20i32, 10i32, 22i32])
}
