import stdx.syntax.*

@Test
class test_01{
    @TestCase
func test_AtomicType_01() {
    let res = parseFile("./AtomicType_01.cj")
    var diags = res.diags
    @Assert(diags.size, 0)

    let sourcefile: SourceFile = res.node.getOrThrow()
    @Expect(sourcefile.toString().replace("\r","").contains(##"class C1 {
    func foo(): This {
        return this
    }
}"##))

    var classDecl: ClassDecl = (sourcefile.topLevelDecls[0] as ClassDecl).getOrThrow()
    let _decl = (classDecl.body.memberDecls[0] as FuncDecl).getOrThrow()
    var _type = _decl.retTyAnnotation.getOrThrow()
    @Assert(_type is AtomicType)
    @Assert(_type.toString(), ##"This"##)
    match ((_type as AtomicType).getOrThrow().kind) {
        case ThisType => ()
        case _ => @Assert(false)
    }
}
}