import stdx.syntax.*

@Test
class test_01{
    @TestCase
func test_binaryexpr_002() {
    let _quote = quote(2+3)
    let res = parseTokens(_quote)
    let sourceNode: SyntaxTreeNode = res.node.getOrThrow()

    var binaryexpr = (sourceNode as BinaryExpr).getOrThrow()
    //toString()
    @Assert(binaryexpr.toString(), "2 + 3")

    //lhs
    @Assert(binaryexpr.lhs.toString(),"2")

    //rhs
    @Assert(binaryexpr.rhs.toString(),"3")

    //opKind
    match (binaryexpr.opKind) {
        case BinaryOpKind.Add => ()
        case _ => @Assert(false)
    }
}
}